{% extends 'cloudmesh_portal/layout/index.jinja' %}

{% block title %}
{{ title }}
{% endblock %}

{% block content %}


<script type="text/javascript" charset="utf-8">
    $(document).ready(function() {
        $('#dictTable').DataTable({
           aLengthMenu: [
                [10, 20, 50, 100, 200, -1],
                [10, 20, 50, 100, 200, "All"]
            ],
            iDisplayLength: All,
            responsive: true,
        });
    } );
</script>

<h2>Overview</h2>
<table  id="dictTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th width="25%">Attribute</th>
            <th>Value</th>
        </tr>
    </thead>
    {% if data is mapping  %}
    <tbody>
        {% for element in data %}
            {% if element.startswith('cm_') %}
            <tr>
                <td>{{element}}</td>
                <td>{{data[element]}}</td>
            </tr>
            {% endif %}
        {% endfor %}
    </tbody>
    {% endif %}
</table>

{% for detail in ['credentials','default'] %}
<h2>{{detail.capitalize()}}</h2>
<table  id="dictTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th width="25%">{{detail.capitalize()}}</th>
            <th>Value</th>
        </tr>
    </thead>
    {% if data is mapping  %}
    <tbody>
         {% for element in data[detail] %}
            <tr>
                <td>{{element}}</td>
                <td>{{data[detail][element]}}</td>
            </tr>
         {% endfor %}
    </tbody>
    {% endif %}
</table>
 {% endfor %}



{% endblock %}
